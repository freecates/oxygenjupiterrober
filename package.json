{
  "name": "jupiter-rober-reactjs",
  "scripts": {
    "dev": "next -p 3001",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-styled-components": "^1.10.0",
    "isomorphic-unfetch": "^3.0.0",
    "markdown-to-jsx": "^6.11.4",
    "next": "^8.1.0",
    "next-router-events": "^2.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rodal": "^1.6.3",
    "styled-components": "^3.4.9"
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^3.2.0"
  }
}
